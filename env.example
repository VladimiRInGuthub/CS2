# ===========================================
# SKINCASE - Configuration Environment
# ===========================================

# Base Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/skincase
MONGO_URI=mongodb://localhost:27017/skincase

# Session & Security
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Steam OAuth
STEAM_API_KEY=your_steam_api_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Payment
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=noreply@skincase.gg

# CSGOSkins API
CSGOSKINS_API_KEY=your_csgoskins_api_key_here
CSGOSKINS_BASE_URL=https://api.csgoskins.gg

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Development Tools
DEBUG=skincase:*
LOG_LEVEL=info

# Production Specific
TRUST_PROXY=true
COMPRESSION_ENABLED=true
HELMET_ENABLED=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_STRIPE_PAYMENTS=true
ENABLE_CSGOSKINS_API=true
ENABLE_REDIS_CACHE=false

# Server Management
SERVER_CLEANUP_INTERVAL=3600000
MAX_SERVERS_PER_USER=3
SERVER_INACTIVITY_TIMEOUT=1800000

# Xcoins Configuration
XCOINS_STARTER_AMOUNT=1000
XCOINS_DAILY_BONUS=50
XCOINS_LOGIN_STREAK_BONUS=100

# Case Opening
CASE_ANIMATION_DURATION=5000
CASE_SOUND_ENABLED=true
CASE_PARTICLES_ENABLED=true

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY

# Internationalization
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# Admin Configuration
ADMIN_EMAIL=admin@skincase.gg
ADMIN_PASSWORD=change_this_admin_password

# Backup & Maintenance
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
MAINTENANCE_MODE=false

# ===========================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with real ones
# 3. Never commit .env to version control
# 4. Use different values for production
# ===========================================
